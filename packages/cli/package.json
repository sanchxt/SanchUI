{
  "name": "@sanch-ui/cli",
  "version": "0.1.0",
  "description": "CLI for installing Sanch UI components",
  "main": "dist/index.js",
  "bin": {
    "sanch": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && pnpm run build:templates",
    "build:templates": "ts-node scripts/build-templates.ts",
    "generate:registry": "ts-node scripts/generate-registry.ts",
    "extract:components": "ts-node scripts/extract-components.ts",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "tailwind",
    "design-system",
    "react19",
    "sanch-ui",
    "cli"
  ],
  "author": "sanchxt",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.13.1",
    "@types/semver": "^7.7.0",
    "eslint": "^9.23.0",
    "glob": "^11.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.5.2",
    "ora": "^8.2.0",
    "semver": "^7.7.1"
  }
}
